<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.malin.broadcast">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.malin.broadcast.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.malin.broadcast.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.malin.broadcast.MyStaticBroadCastActivity"
            android:screenOrientation="portrait" />

        <receiver android:name="com.malin.broadcast.NetWorkChangeBroadCast">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>


        <receiver android:name="com.malin.broadcast.MyStaticBroadCastReceiver">
            <intent-filter>
                <action android:name="com.malin.anr.ACTION_MY_BROADCAST" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.malin.broadcast.OrderBroadCastActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.malin.broadcast.LocalBroadCastActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>